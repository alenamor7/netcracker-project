<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
        <g:VerticalPanel spacing="5" >
            <g:Label text="Login: "/>
            <g:TextBox ui:field="loginBox" width="300" />
            <g:Label text = "Password:"/>
            <g:PasswordTextBox ui:field="passwordBox" width="300"/>
            <g:VerticalPanel spacing="5">
                <g:Button ui:field="loginButton" text="Log in"/>
                <g:Button ui:field="signUp" text="Sign up"/>
            </g:VerticalPanel>
            <g:Label ui:field="errorLabel" height="20"/>
        </g:VerticalPanel>
    </g:HorizontalPanel>
</ui:UiBinder>