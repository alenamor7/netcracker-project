<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:VerticalPanel spacing="5" width="400" height="250">
        <g:cell width="500px"  horizontalAlignment="ALIGN_RIGHT">
            <g:Button ui:field="close" text="Close"/>
        </g:cell>
        <g:Label text="Login: "/>
        <g:TextBox ui:field="loginBox" width="300" />
        <g:Label text = "New password:"/>
        <g:TextBox ui:field="passwordBox" width="300"/>
        <g:Button ui:field="changeButton" text="Change password"/>
        <g:Label ui:field="errorLabel" height="20"/>
    </g:VerticalPanel>
</ui:UiBinder>