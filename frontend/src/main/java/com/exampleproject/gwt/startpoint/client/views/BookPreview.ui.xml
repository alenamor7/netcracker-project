<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:FlowPanel>
        <g:VerticalPanel spacing="2">
            <g:Image ui:field="photo"/>
            <g:Label ui:field="title" width=""/>
            <g:Label ui:field="author"/>
            <g:Label ui:field="price" />
            <g:VerticalPanel spacing="5">
                <g:Label ui:field="canBuy"/>
                <g:Button ui:field="buyBook" text="Add in cart" visible="false"/>
                <g:Button ui:field="moreInfo" text="More"/>
            </g:VerticalPanel>
        </g:VerticalPanel>
    </g:FlowPanel>
</ui:UiBinder>