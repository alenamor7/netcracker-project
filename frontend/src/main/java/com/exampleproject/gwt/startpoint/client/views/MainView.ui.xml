<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:VerticalPanel>
        <g:HorizontalPanel spacing="10">
            <g:cell width="1100px" horizontalAlignment="ALIGN_RIGHT">
                <g:Button ui:field="cartButton" text="Cart" visible="false"/>
            </g:cell>
            <g:Button ui:field="changePassword" text="Change users' passwords" visible="false"/>
        </g:HorizontalPanel>
        <g:HorizontalPanel>
            <g:VerticalPanel spacing="10">
                <g:VerticalPanel spacing="5">
                    <g:Label text="Price:"/>
                    <g:HorizontalPanel spacing="5">
                        <g:Label text="from: "/>
                        <g:TextBox ui:field="minPriceBox"/>
                        <g:Label text=" euro"/>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel spacing="5">
                        <g:Label text="to: "/>
                        <g:TextBox ui:field="maxPriceBox"/>
                        <g:Label text=" euro"/>
                    </g:HorizontalPanel>
                </g:VerticalPanel>
                <g:VerticalPanel spacing="5">
                    <g:Label text="Genres:"/>
                    <g:ListBox ui:field="genreList"/>
                </g:VerticalPanel>

                <g:VerticalPanel spacing="5">
                    <g:Label text="Description: "/>
                    <g:CheckBox ui:field="withPhoto" text="With photo"/>
                </g:VerticalPanel>

                <g:Button ui:field="sort" text="Sort"/>
                <g:Button ui:field="addBookButton" text="Add book" visible="false"/>
            </g:VerticalPanel>
            <g:Grid ui:field="booksGrid"/>
        </g:HorizontalPanel>
    </g:VerticalPanel>
</ui:UiBinder>